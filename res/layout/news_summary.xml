<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/newsDetailLayout"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView android:id="@+id/newsTitle" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
	</TextView>
	<LinearLayout android:id="@+id/contentLayout"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical">
		<TextView android:id="@+id/newsSource" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="TextView">
			
		</TextView>
		<TextView android:id="@+id/newsSummary" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="TextView">
		</TextView>
	</LinearLayout>
</LinearLayout>
