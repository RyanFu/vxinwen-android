<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/newsDetailLayout"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:orientation="vertical" android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">
   
        <LinearLayout android:id="@+id/contentLayout1"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView android:id="@+id/newsTitle1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:textSize="24sp"
                android:textColor="#000000" android:textStyle="bold"
                android:gravity="left|bottom" android:padding="8dp">
            </TextView>
            <WebView android:id="@+id/newsBody1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:text="TextView"
                android:textSize="18sp" android:textColor="#000000"
                android:padding="8dp" android:scrollbars="vertical"
                android:singleLine="false">
            </WebView>
        </LinearLayout>
</LinearLayout>